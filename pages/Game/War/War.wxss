.background{
  /*filter: blur(10rpx);*/
  position: absolute;
}

.tip{
  position: fixed;
  width: 100%;
  z-index: 100;
  top: 400rpx;
  text-align: center;
  font-size: 4rem;
  font-weight: bolder;
}

.choice_button{
  position: absolute;
  bottom: 125rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.choice_button .choice_button_item{
  width: 450rpx;
  background-color: rgba(220, 224, 220, 0.5);
  text-align: center;
  margin-top: 25rpx;
  padding: 30rpx 65rpx;
  font-size: 1rem;
  font-weight: 600;
}

.cover-box, .cover-box image{
  position: fixed;
  background-size: cover;
  background-repeat: no-repeat;
  height: 100%;
  width: 100%;
}

.introduce{
  position: fixed;
  background-color: black;
  color: white;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.introduce .introduce_content{
  width: 80%;
  display: inline-block;
  text-align: center;
}

.introduce .introduce_pass {
  display: inline-block;
  width: 100%;
  text-align: right;
  position: fixed;
  margin-right: 150rpx;
  top: 200rpx;
}

.introduce .introduce_pass .introduce_pass_text{
  font-size: 0.9rem;
}

.success_font{
  color: #5b8c00;
}

.fail_font{
  color: #ad2102;
}
.back{
  position: fixed;
  margin-top: 85rpx;
  left: 38rpx;
  width: 55rpx;
  height: 55rpx;
  z-index: 10;
}
