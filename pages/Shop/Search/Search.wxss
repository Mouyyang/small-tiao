#cover{
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
    background-color: #d4baba;
    padding-top: 200rpx;
    overflow: hidden;
}

.container{
    display: flex;
    background-color: white;
    height: 100%;
    border-radius: 75rpx 75rpx 0 0;
    padding-top: 15rpx;
    flex-direction: column;
    overflow: hidden;
}
.input-container{
    border: 3rpx solid #cfcfd0;
    border-radius: 25rpx;
    margin: 25rpx 50rpx;
    height: 75rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.input-search__icon{
    width: 45rpx;
    height: 45rpx;
    margin: 0 20rpx;
}
.search-input{
    height: 75rpx;
    font-size: 1rem;
    flex: 1;
}
.info{
    overflow: hidden;
}
.search-placeholder{
    font-size: 0.7rem;
}
.input-search__clear{
    width: 50rpx;
    height: 50rpx;
    margin: 0 20rpx;
}
.keyword{
    overflow: hidden;
}
.keyword-item{
    height: 100rpx;
    border-bottom: 2.5rpx solid #e6e9ee;
    margin: 0 35rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.keyword-item__icon{
    width: 45rpx;
    height: 45rpx;
    margin-left: 10rpx;
    margin-right: 25rpx;
    margin-top: 5rpx;
}

.keyword-item__content{
    font-size: 0.9rem;
    color: #161616;
}

.keyword-item__content__key{
    color: #e75712;
}

.product-title{
    color: #373737;
    font-size: 1.2rem;
    font-weight: bold;
    margin-left: 50rpx;
}

.products{
    margin-top: 25rpx;
    flex: 1;
}

.product-item {
    padding: 0 50rpx;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 2.5rpx solid #e6e9ee;
}

.product-image{
    width: 220rpx;
    height: 220rpx;
    margin-right: 25rpx;
    border-radius: 20rpx;
}

.product-detail{
    height: 215rpx;
    display: flex;
    flex-direction: column;
    flex: 1;
    margin-right: 25rpx;
    justify-content: space-between;
}

.product_next{
    width: 40rpx;
    height: 40rpx;
}

.product-price{
    color: #e75712;
}

.product-price__number{
    font-size: 2rem;
}

.product-container{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.products{
    flex: 1;
    overflow: scroll;
}

.keyword{
    flex: 1;
    overflow: scroll;
}

.back{
    position: fixed;
    margin-top: 85rpx;
    left: 38rpx;
    width: 55rpx;
    height: 55rpx;
    z-index: 10;
}
