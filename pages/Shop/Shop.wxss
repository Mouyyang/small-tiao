/* pages/Shop/Shop.wxss */
.search-container {

    display: flex;
    height: 80rpx;
    align-items: center;
    justify-content: center;
  }
  
.search {
    position: relative;
    width: 650rpx;
    display: flex;
    box-sizing: border-box;
    padding-left: 25rpx;

  }
  
.search input {
    display: block;
    box-sizing: border-box;
    background: white;
    height: 60rpx;
    width: 565rpx;
    border-radius: 20rpx;
    padding-left: 150rpx;
    line-height: 62rpx;
    font-size: 12px;
  }
  
  
.search-placeholder {
    font-size: 14px;
    color: #A9A6A6;
    line-height: 60rpx;
  }


.search-qr-container {
    padding-left: 26rpx;

}

.search-image {
    position: relative;
    display: flex;
    height: 60rpx;
    width: 60rpx;
    align-items: center;
    justify-content: center;
}

.search-image image{
    height: 40rpx;
    width: 40rpx;
}

