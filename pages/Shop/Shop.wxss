
.search-container {

    display: flex;
    height: 80rpx;
    align-items: center;
    justify-content: center;
  }

.search {
    position: relative;
    width: 650rpx;
    display: flex;
    box-sizing: border-box;
    padding-left: 25rpx;

  }

.search input {
    display: block;
    box-sizing: border-box;
    background: white;
    height: 60rpx;
    width: 565rpx;
    border-radius: 20rpx;
    padding-left: 150rpx;
    line-height: 62rpx;
    font-size: 12px;
  }


.search-placeholder {
    font-size: 14px;
    color: #A9A6A6;
    line-height: 60rpx;
  }


.search-qr-container {
    padding-left: 26rpx;

}

.search-image {
    position: relative;
    display: flex;
    height: 60rpx;
    width: 60rpx;
    align-items: center;
    justify-content: center;
}

.search-image image{
    height: 40rpx;
    width: 40rpx;
}

.swiper-container {
    width: 750rpx;
    height: 430rpx;
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.swiper-container .swiper1 {
    width: 700rpx;
    height: 380rpx;
    border-radius: 15rpx;
    border-radius: 0 0 20px 0 #80afbbcc;
}
.swiper-item{
    border-radius: 15px;
}

.swiper-container .swiper1 image {
    width: 750rpx;
    height: 375rpx;
    /* margin: 8rpx 15rpx; */
    /* border-radius: 16rpx; */
}

.classify-container {
    width: 750rpx;
    background-color: #ffffff;
}

.class-item {
  margin: 0 auto;
  width: 710rpx;
  height: 200rpx;
  border-bottom: #cc6d6b 4rpx dashed;
  display: flex;
}

.catename{
  margin: auto;
  width: 150rpx;
  height: 200rpx;

  display: flex;
  align-items: center;
}

.cateimage {
  margin: auto;
  width: 180rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cateimage image{
  width: 150rpx;
  height: 180rpx;
}

.test {
  margin: auto;
  width: 110rpx;
  height: 200rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  font-size: small;
}

.input-container{
    background-color: white;
    border-radius: 20rpx;
    margin: 10rpx 30rpx;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.input-search__icon{
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx;
}
.input-container text{
    font-size: 0.7rem;
    color: #8c8c8c;
}

.sortItem{
    padding: 20rpx 20rpx 30rpx 30rpx;
    border-bottom: #e6e9ee solid 9rpx;
}

.sortItem .top{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.sortItem .top .sort-name{
    font-weight: bold;
    font-size: 1rem;
}

.sortItem .top .more{
    width: 30rpx;
    height: 30rpx;
    margin-right: 22rpx;
}

.sortItem .productInfo{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
}

.productItem{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-right: 30rpx;
}

.productItem .product-image{
    width: 210rpx;
    height: 210rpx;
    border-radius: 25rpx;
    box-sizing: content-box;
}

.productInfo .product-name{
    font-size: 0.8rem;
    margin-top: 16rpx;
}

